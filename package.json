{
  "name": "journalr",
  "displayName": "journalr",
  "description": "",
  "publisher": "bspeice",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:journalr.topicBrowser",
    "onCommand:journalr.journal.createJournal",
    "onCommand:journalr.attachment.insertAttachment",
    "onCommand:journalr.attachment.insertImage",
    "onCommand:journalr.explorerContextCreateNote",
    "onCommand:journalr.explorerContextCopyId",
    "onCommand:journalr.topicBrowser.refresh",
    "onCommand:journalr.topicBrowser.copyId",
    "onCommand:journalr.topicBrowser.copyIdWithTitle",
    "onCommand:journalr.topicBrowser.createNote",
    "onCommand:journalr.topicBrowser.createTopic"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Journalr",
      "properties": {
        "journalr.attachmentFormat": {
          "type": "string",
          "default": "[_attachments]/YYYYMMDDhhmmss",
          "markdownDescription": "Format string (e.g. `[_attachments]/YYYYMMDDhhmmss`) for note attachments when imported from the \"Insert Attachment\" or \"Insert Image\" commands. See [`momentjs`](https://momentjs.com/docs/#/displaying/format/) for formatting options.\n\nFile extensions are preserved."
        },
        "journalr.contextMenuFormat": {
          "type": "string",
          "default": "YYYYMMDDhhmmss[.md]",
          "markdownDescription": "Format string (e.g. `YYYY/MM/hh_mm[.md]`) for note filenames when created from the \"Create Note\" context menu. See [`momentjs`](https://momentjs.com/docs/#/displaying/format/) for formatting options."
        },
        "journalr.journalFormats": {
          "type": "array",
          "default": [],
          "markdownDescription": "List of format strings to use for the \"Create Journal\" command. See [`momentjs`](https://momentjs.com/docs/#/displaying/format/) for available options."
        }
      }
    },
    "commands": [
      {
        "command": "journalr.journal.createJournal",
        "title": "Create Journal",
        "category": "Journalr"
      },
      {
        "command": "journalr.attachment.insertAttachment",
        "title": "Insert Attachment",
        "category": "Journalr"
      },
      {
        "command": "journalr.attachment.insertImage",
        "title": "Insert Image",
        "category": "Journalr"
      },
      {
        "command": "journalr.explorer.createNote",
        "title": "Create Note",
        "category": "Journalr"
      },
      {
        "command": "journalr.explorer.copyId",
        "title": "Copy Note ID",
        "category": "Journalr"
      },
      {
        "command": "journalr.topicBrowser.refresh",
        "title": "Refresh Topics",
        "category": "Journalr",
        "icon": "$(refresh)"
      },
      {
        "command": "journalr.topicBrowser.copyId",
        "title": "Copy Note ID",
        "category": "Journalr",
        "icon": "$(files)"
      },
      {
        "command": "journalr.topicBrowser.copyIdWithTitle",
        "title": "Copy Note ID (with title)",
        "category": "Journalr"
      },
      {
        "command": "journalr.topicBrowser.createNote",
        "title": "Create Note",
        "category": "Journalr",
        "icon": "$(file-add)"
      },
      {
        "command": "journalr.topicBrowser.createTopic",
        "title": "Create Topic",
        "category": "Journalr",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "journalr.topicBrowser.showArticle",
        "title": "Show Article",
        "category": "Journalr"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "journalr.explorer.createNote",
          "when": "false"
        },
        {
          "command": "journalr.explorer.copyId",
          "when": "false"
        },
        {
          "command": "journalr.topicBrowser.copyId",
          "when": "false"
        },
        {
          "command": "journalr.topicBrowser.copyIdWithTitle",
          "when": "false"
        },
        {
          "command": "journalr.topicBrowser.createNote",
          "when": "false"
        },
        {
          "command": "journalr.topicBrowser.createTopic",
          "when": "false"
        },
        {
          "command": "journalr.topicBrowser.showArticle",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "journalr.explorer.createNote",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        },
        {
          "command": "journalr.explorer.copyId",
          "when": "!explorerResourceIsFolder",
          "group": "2_workspace"
        }
      ],
      "view/title": [
        {
          "command": "journalr.topicBrowser.refresh",
          "when": "view == journalr.topicBrowser",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "journalr.topicBrowser.copyId",
          "when": "view == journalr.topicBrowser && viewItem == journalr.article",
          "group": "inline"
        },
        {
          "command": "journalr.topicBrowser.copyId",
          "when": "view == journalr.topicBrowser && viewItem == journalr.article"
        },
        {
          "command": "journalr.topicBrowser.copyIdWithTitle",
          "when": "view == journalr.topicBrowser && viewItem == journalr.article"
        },
        {
          "command": "journalr.topicBrowser.createNote",
          "when": "view == journalr.topicBrowser && viewItem == journalr.topic",
          "group": "inline"
        },
        {
          "command": "journalr.topicBrowser.createNote",
          "when": "view == journalr.topicBrowser && viewItem == journalr.topic"
        },
        {
          "command": "journalr.topicBrowser.createTopic",
          "when": "view == journalr.topicBrowser && viewItem == journalr.topic",
          "group": "inline"
        },
        {
          "command": "journalr.topicBrowser.createTopic",
          "when": "view == journalr.topicBrowser && viewItem == journalr.topic"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "journalr.topicBrowser",
          "name": "Topics"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --write src/ package.json tsconfig.json"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "moment": "^2.27.0"
  }
}
